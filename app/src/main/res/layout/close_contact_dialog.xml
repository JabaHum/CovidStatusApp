<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View"/>

        <variable
            name="content"
            type="String" />

        <variable
            name="citation"
            type="String" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:background="@color/colorPrimaryDark"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/layout_close_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/close_close_contact"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    style="@style/TextviewTitleStyleWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:contentDescription="@string/todo"
                    android:drawableStart="@drawable/ic_close_foreground"
                    android:gravity="center"
                    android:textAlignment="viewStart"
                    android:text="Avoid Close Contact" />

            </RelativeLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_close_contact">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">


                <ImageView
                    android:id="@+id/img_social_distancing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/social_distancing_header" />

                <TextView
                    android:id="@+id/txt_content"
                    content="@{content}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/img_social_distancing"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

                <TextView
                    content="@{citation}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txt_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp" />

            </RelativeLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

